@import "movie-list/movie-list-template.wxss";
@import "/components/swiper/swiper-template.wxss";
.search-bar{
	position: fixed;
	top: 0;
	left: 0;
	z-index: 999;
	box-sizing: border-box;
	width: 100%;
	height: 80rpx;
	padding: 0 10rpx 10rpx;
	background-color: #5080f3;
	text-align: center;
	box-shadow: 0 10rpx 60rpx rgba(0, 0, 0, .3);
}
.search-txt{
	display: inline-block;
	width: 730rpx;
	height: 70rpx;
	background-color: #fff;
	background-image: url(data:image/png;base64,);
	background-position: 20rpx center;
	background-repeat: no-repeat;
	background-size: 50rpx;
	border-radius: 8rpx;
	font-size: 32rpx;
}
.search-txt-plc{
	color: #bfbfbf;
}

.container {
  margin-top: 80rpx;
	display: flex;
  background-color: #f2f2f2;
  flex-direction: column;
    -webkit-filter: blur(10px); /* Chrome, Opera */
    -moz-filter: blur(10px);
    -ms-filter: blur(10px);    
        filter: blur(10px);
}

.movies-template {
  margin-bottom: 30rpx;
}
.movies-template:last-of-type {
  margin-bottom: 0;
}
.movie-container{
  margin-bottom: 30rpx;
}
.xx-img {
  height: 30rpx;
  width: 30rpx;
  margin: auto 0 auto 10rpx;
}